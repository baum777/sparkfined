# Sparkfined TA-PWA - Environment Configuration
# Copy this to .env.local and configure as needed

# Application
VITE_APP_NAME=Sparkfined TA-PWA
VITE_APP_VERSION=1.0.0-beta

# Upload Configuration
MAX_UPLOAD_MB=5
MAX_IMAGE_WIDTH=1920

# API Configuration
DEX_API_BASE=https://api.dexscreener.com
DEX_API_TIMEOUT=5000
PUMPFUN_API_BASE=https://api.pump.fun
PUMPFUN_API_TIMEOUT=5000

# Analysis AI Provider (Beta: none | Alpha: openai, grok, anthropic)
# Set to 'none' for heuristic-only analysis (no external API calls)
ANALYSIS_AI_PROVIDER=
OPENAI_API_KEY=
GROK_API_KEY=
ANTHROPIC_API_KEY=

# Alpha Features (Phase 6+) - Placeholder flags
# These flags prepare for future orderflow & wallet analysis features
# Currently all disabled - no external API calls made
ORDERFLOW_PROVIDER=none         # none | birdeye | bubblemaps | custom
ORDERFLOW_API_KEY=
WALLETFLOW_PROVIDER=none        # none | nansen | arkham | custom  
WALLETFLOW_API_KEY=

# Feature Flags
ENABLE_CA_LOOKUP=true           # Contract address lookup via Dexscreener
ENABLE_CHART_ANALYSIS=true      # Chart pattern recognition (local heuristics)
ENABLE_METRICS=true             # Local telemetry & usage tracking
ENABLE_OFFLINE_MODE=true        # PWA offline support

# Debug & Development
VITE_ENABLE_DEBUG=false         # Show debug logs in console
VITE_ENABLE_ANALYTICS=false     # Reserved for future opt-in analytics
VITE_LOG_LEVEL=info             # error | warn | info | debug

# Performance Tuning
SKELETON_DELAY_MS=200           # Max time before showing loading skeleton
PERCEIVED_LATENCY_TARGET_MS=1000  # Target perceived latency for analysis
REPLAY_LOAD_TIMEOUT_MS=400      # Target replay modal open time

# Privacy & Storage
LOCAL_STORAGE_ONLY=true         # Never send data to external servers
FEEDBACK_LOCAL_ONLY=true        # Feedback stored locally, manual export only
SESSION_STORAGE_DAYS=30         # Days to retain session data

# PWA Configuration  
PWA_CACHE_STRATEGY=stale-while-revalidate
PWA_CACHE_MAX_AGE_HOURS=24
PWA_ENABLE_NOTIFICATIONS=false  # Reserved for future features

# Notes:
# - All AI/external features default to 'none' for privacy-first operation
# - Alpha features are stubs only - no real API calls until Phase 6
# - App works 100% offline with local heuristics
# - No PII collected, no tracking, no external data transmission
