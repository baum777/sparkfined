# Sparkfined TA-PWA - Environment Configuration
# Copy this to .env.local and configure as needed

# Application
VITE_APP_NAME=Sparkfined TA-PWA
VITE_APP_VERSION=1.0.0-alpha

# Upload Configuration
MAX_UPLOAD_MB=5
MAX_IMAGE_WIDTH=1920

# ============================================================================
# Data Provider Configuration (Alpha - Issue 0)
# ============================================================================

# Primary Provider Selection
# Options: dexpaprika | moralis | mock
VITE_DATA_PRIMARY=dexpaprika
DATA_PRIMARY=dexpaprika

# Secondary/Fallback Provider
# Options: moralis | none
VITE_DATA_SECONDARY=moralis
DATA_SECONDARY=moralis

# Legacy Fallback Chain (for compatibility)
VITE_DATA_FALLBACKS=dexscreener,pumpfun
DATA_FALLBACKS=dexscreener,pumpfun

# ============================================================================
# Provider API Configuration (Alpha - Issues 1-4)
# ============================================================================

# DexPaprika API (Beta Primary)
VITE_DEXPAPRIKA_BASE=https://api.dexpaprika.com
DEXPAPRIKA_BASE=https://api.dexpaprika.com
VITE_DEXPAPRIKA_API_KEY=__PLACEHOLDER__
DEXPAPRIKA_API_KEY=__PLACEHOLDER__
DEXPAPRIKA_TIMEOUT=5000
DEXPAPRIKA_CACHE_TTL_MIN=15

# Moralis API (Alpha Augment)
VITE_MORALIS_BASE=https://deep-index.moralis.io/api/v2.2
MORALIS_BASE=https://deep-index.moralis.io/api/v2.2
VITE_MORALIS_API_KEY=__PLACEHOLDER__
MORALIS_API_KEY=__PLACEHOLDER__
MORALIS_TIMEOUT=6000
MORALIS_CACHE_TTL_MIN=10

# Dexscreener API (Fallback)
VITE_DEXSCREENER_BASE=https://api.dexscreener.com
DEXSCREENER_BASE=https://api.dexscreener.com
DEXSCREENER_API_KEY=
DEXSCREENER_TIMEOUT=5000

# Pump.fun API (Fallback/Metadata)
VITE_PUMPFUN_BASE=https://api.pump.fun
PUMPFUN_BASE=https://api.pump.fun
PUMPFUN_API_KEY=
PUMPFUN_TIMEOUT=5000

# ============================================================================
# Analysis AI Provider Configuration (Alpha - Issue 7)
# ============================================================================

# AI Provider Selection
# Options: none | openai | grok | anthropic
# Set to 'none' for heuristic-only analysis (no external API calls)
VITE_ANALYSIS_AI_PROVIDER=none
ANALYSIS_AI_PROVIDER=none

# AI Provider API Keys
OPENAI_API_KEY=__PLACEHOLDER__
GROK_API_KEY=__PLACEHOLDER__
ANTHROPIC_API_KEY=__PLACEHOLDER__

# AI Teaser Configuration
AI_TEASER_TIMEOUT_MS=2000
AI_TEASER_MAX_TOKENS=500

# ============================================================================
# Alpha Features (Phase 6+) - Placeholder flags
# ============================================================================

# OrderFlow & Wallet Analysis (Future)
# Currently all disabled - no external API calls made
ORDERFLOW_PROVIDER=none         # none | birdeye | bubblemaps | custom
ORDERFLOW_API_KEY=__PLACEHOLDER__
WALLETFLOW_PROVIDER=none        # none | nansen | arkham | custom
WALLETFLOW_API_KEY=__PLACEHOLDER__

# ============================================================================
# Feature Flags (Alpha - Issues 0, 12, 13)
# ============================================================================

ENABLE_CA_LOOKUP=true           # Contract address lookup via data providers
ENABLE_CHART_ANALYSIS=true      # Chart pattern recognition (local heuristics)
ENABLE_METRICS=true             # Local telemetry & usage tracking
ENABLE_OFFLINE_MODE=true        # PWA offline support
VITE_ENABLE_METRICS=true        # Provider telemetry & fallback logging
VITE_ENABLE_AI_TEASER=false     # AI-powered teaser analysis (Issue 7)

# ============================================================================
# Debug & Development
# ============================================================================

VITE_ENABLE_DEBUG=false         # Show debug logs in console
VITE_ENABLE_ANALYTICS=false     # Reserved for future opt-in analytics
VITE_LOG_LEVEL=info             # error | warn | info | debug

# ============================================================================
# Performance Tuning (Alpha - Issue 12)
# ============================================================================

SKELETON_DELAY_MS=200           # Max time before showing loading skeleton
PERCEIVED_LATENCY_TARGET_MS=1000  # Target perceived latency for analysis
REPLAY_LOAD_TIMEOUT_MS=350      # Target replay modal open time (Issue 10)
OCR_WORKER_POOL_SIZE=2          # Number of OCR workers (Issue 5)
SNAPSHOT_CACHE_TTL_SEC=300      # Token snapshot cache duration (Issue 4)

# Performance Budgets (Issue 12)
PERF_BUDGET_START_MS=1000       # App start budget
PERF_BUDGET_API_MEDIAN_MS=500   # API median budget
PERF_BUDGET_AI_TEASER_P95_MS=2000  # AI teaser p95 budget
PERF_BUDGET_REPLAY_OPEN_P95_MS=350  # Replay open p95 budget
PERF_BUDGET_JOURNAL_SAVE_MS=60     # Journal save budget
PERF_BUDGET_JOURNAL_GRID_MS=250    # Journal grid render budget
PERF_BUDGET_EXPORT_ZIP_P95_MS=800  # Export ZIP p95 budget

# ============================================================================
# Privacy & Storage
# ============================================================================

LOCAL_STORAGE_ONLY=true         # Never send data to external servers
FEEDBACK_LOCAL_ONLY=true        # Feedback stored locally, manual export only
SESSION_STORAGE_DAYS=30         # Days to retain session data

# ============================================================================
# PWA Configuration (Alpha - Issue 4)
# ============================================================================

PWA_CACHE_STRATEGY=stale-while-revalidate
PWA_CACHE_MAX_AGE_HOURS=24
PWA_ENABLE_NOTIFICATIONS=false  # Reserved for future features
PWA_RUNTIME_CACHE_TTL_SEC=300   # Runtime cache for /api/* routes

# ============================================================================
# Security Configuration (Alpha - Issue 13)
# ============================================================================

ENABLE_INPUT_VALIDATION=true    # Validate Solana addresses (Base58)
ENABLE_CSP=false                # Content Security Policy (optional)

# ============================================================================
# Notes:
# ============================================================================
#
# Alpha Board Implementation (Issues 0-15):
# - Issue 0-4: Data infrastructure (flags, proxies, adapters, muxing)
# - Issue 5-7: Analysis (OCR, heuristic, AI teaser)
# - Issue 8-11: UX (ResultCard, Journal, Replay, Export)
# - Issue 12-15: Production ready (Perf, Security, Tests, Docs)
#
# Privacy-First Design:
# - All AI/external features default to 'none' for privacy-first operation
# - Alpha features are stubs only - no real API calls until Phase 6
# - App works 100% offline with local heuristics
# - No PII collected, no tracking, no external data transmission
#
# Data Provider Architecture:
# - DexPaprika: Beta Primary - Solana token/pool data with 15min cache
# - Moralis: Alpha Augment - Multi-chain support with 10min cache
# - Dexscreener: Fallback for token price/volume data
# - Pump.fun: Fallback for metadata/social links
# - Orchestrator automatically falls back on timeout/error with telemetry
#
